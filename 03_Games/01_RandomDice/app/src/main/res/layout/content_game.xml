<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.miguelcr.a01_randomdice.GameActivity"
    tools:showIn="@layout/activity_game">

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text_view_points" />

    <TextView
        android:text="Nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_view_player_name" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_dice_one"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_view_dice" />

    <TextView
        android:text="2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_circle"
        android:textColor="@android:color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:layout_below="@+id/image_view_dice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:onClick="numberClicked"
        android:textSize="30sp"
        android:id="@+id/text_view_number_2" />

    <TextView
        android:text="3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@drawable/bg_circle"
        android:textColor="@android:color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/text_view_number_3"
        android:onClick="numberClicked"
        android:layout_alignBottom="@+id/text_view_number_2"
        android:layout_alignParentRight="true"
        android:textSize="30sp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:text="60s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_timer"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_circle"
        android:textColor="@android:color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:onClick="numberClicked"
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/text_view_number_1"
        android:layout_alignBaseline="@+id/text_view_number_2"
        android:layout_alignBottom="@+id/text_view_number_2"
        android:layout_toRightOf="@+id/text_view_points"
        android:layout_toEndOf="@+id/text_view_points" />
</RelativeLayout>
