<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- All the restaurant information -->


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_off"
            android:layout_below="@+id/textViewDescription"
            android:layout_alignLeft="@+id/textViewDescription"
            android:layout_alignStart="@+id/textViewDescription"
            android:id="@+id/imageView3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:id="@+id/imageViewRestaurant" />

        <TextView
            android:text="Spanish Food Restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewRestaurant"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="11dp"
            android:id="@+id/textViewTitle"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <TextView
            android:text="10-30â‚¬"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewTitle"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textViewPrice"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="#ff0000" />

        <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitle"
            android:layout_alignLeft="@+id/textViewTitle"
            android:layout_alignStart="@+id/textViewTitle"
            android:layout_marginTop="15dp"
            android:id="@+id/textViewDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_off"
            android:layout_below="@+id/textViewDescription"
            android:layout_alignLeft="@+id/textViewDescription"
            android:layout_alignStart="@+id/textViewDescription"
            android:id="@+id/imageViewStar1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_off"
            android:layout_below="@+id/textViewDescription"
            android:layout_toRightOf="@+id/imageView3"
            android:id="@+id/imageViewStar2"
            android:layout_alignBottom="@+id/imageView3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_off"
            android:layout_below="@+id/textViewDescription"
            android:layout_toRightOf="@+id/imageViewStar2"
            android:layout_toEndOf="@+id/imageViewStar2"
            android:id="@+id/imageViewStar3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_off"
            android:layout_below="@+id/textViewDescription"
            android:layout_toRightOf="@+id/imageViewStar3"
            android:layout_toEndOf="@+id/imageViewStar3"
            android:id="@+id/imageViewStar4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_off"
            android:layout_alignBottom="@+id/imageViewStar4"
            android:layout_toRightOf="@+id/imageViewStar4"
            android:layout_toEndOf="@+id/imageViewStar4"
            android:id="@+id/imageViewStar5" />


        <!-- All the restaurant information -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDescription"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>